<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <%- include('./links/css'); %>

</head>

<body>

    <%- include('./nav') %>
        <div class="container">
            <% blogs.forEach(element=> { %>
                <div class="card" style="width:400px">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%= element.title %>
                        </h4>
                        <p class="card-text">
                            <%= element.description %>
                        </p>
                        <a href="/blog/<%=element._id %>" class="btn btn-primary">view</a>
                    </div>
                </div>

                <% }) %>
        </div>
        <%- include('./links/js'); %>

</html>